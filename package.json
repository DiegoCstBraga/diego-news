{
  "name": "diego-news",
  "version": "1.0.0",
  "description": "A repo based on curso.dev, a course that teaches how tab.news was built",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "diegocstbraga",
  "license": "MIT",
  "dependencies": {
    "next": "^16.0.7",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.1",
    "@types/react": "18.3.12",
    "jest": "^29.6.2",
    "prettier": "^3.4.2",
    "typescript": "5.7.2"
  }
}